@model EnginSermet_TechCareerProject.Entities.Product

@{
    ViewData["Title"] = "Add Product";
}


<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="form-floating mb-3">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                    <input type="text" asp-for="ProductName" class="form-control" placeholder="Product Name" />
                    <label for="floatingInput">Product Name</label>
                </div>
            </div>
            <div class="form-group">
                    <div class="form-floating mb-3">
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        <input type="text" asp-for="UnitPrice" class="form-control" placeholder="Price" />
                        <label for="floatingInput">Price</label>
                    </div>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CategoryId" class="form-control" value="@ViewBag.Id" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
