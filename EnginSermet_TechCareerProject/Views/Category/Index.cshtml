@model IEnumerable<EnginSermet_TechCareerProject.Entities.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a asp-action="Add">Add New</a>
</p>

<div class="container categories">
@foreach (var item in Model)
{
    var base64 = Convert.ToBase64String(item.Picture);
    var imgsrc = String.Format("data:image/gif;base64,{0}", base64);
    <div class="responsive">
        <div class="gallery">
            <a asp-controller="Category" asp-action="CategoryProduct" asp-route-id="@item.CategoryId">
                <div class="catContainer">
                    <img src="@imgsrc" width="400" height="400">
                    <a asp-action="Details" asp-route-id="@item.CategoryId"> 
                    <i class="fa-light fa-settings"></i>
                    </a>
                </div>
            </a>
            <div class="desc">@Html.DisplayFor(modelItem => item.CategoryName)</div>
        </div>
    </div>

}
</div>



<style>
    @@media screen and (min-width: 1400px){
            .container {
        max-width: 1140px !important;
    }

    }
    div.categories {
        display: inline-table;
        padding: 0;
    }
    div.gallery {
      border: 1px solid #ccc;
    }

    div.gallery:hover {
      border: 1px solid #777;
    }

    div.gallery img {
      width: 100%;
      height: auto;
    }

    div.desc {
      padding: 15px;
      text-align: center;
    }

    * {
      box-sizing: border-box;
    }

    .responsive {
      padding: 6px 6px;
      float: left;
      width: 24.99999%;
    }

    .catContainer {
        position: relative;
    }

    .catContainer img {
        display: block;
    }

    .catContainer .fa-settings {
        position: absolute;
        top: 12px;
        right: 12px;
    }


    .fa-settings {
        font-style: normal;
    }

    .fa-settings:before {
    content: "\f141";
    font-family: "FontAwesome";
    font-weight: 400;
    border: solid 1px #665f5f;
    border-radius: 4px;
    padding: 4px 5px 2px 5px;
    background-color: #f6f3ec;
    color: #403b3b;
    }

</style>
